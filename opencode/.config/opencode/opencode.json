{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      // Anything not specified ask
      "*": "ask",
      "git rm *": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git init *": "ask",
      "rm *": "ask",
      "npm *": "ask",
      // Alows
      "git *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "glob *": "allow",
      "find *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "echo *": "allow",
      "man *": "allow",
      "cargo *": "allow",
      "gh run *": "allow",
      "make *": "allow"
      // Denies after here
    },
    "edit": {
      "*": "ask"
    }
  },
  "keybinds": {
    "leader": "ctrl+b"
  },
  "plugin": [
    // "oh-my-opencode",
    // "opencode-antigravity-auth@1.2.8",
    // "opencode-openai-codex-auth"
    "opencode-antigravity-auth@latest",
    "opencode-antigravity-quota@latest"
  ],
  "provider": {
    "opencode": {
      "name": "OpenCode Zen",
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2"
        },
        "gpt-5.1": {
          "name": "GPT 5.1"
        },
        "gpt-5.1-codex": {
          "name": "GPT 5.1 Codex"
        },
        "gpt-5.1-codex-max": {
          "name": "GPT 5.1 Codex Max"
        },
        "gpt-5.1-codex-mini": {
          "name": "GPT 5.1 Codex Mini"
        },
        "gpt-5": {
          "name": "GPT 5"
        },
        "gpt-5-codex": {
          "name": "GPT 5 Codex"
        },
        "gpt-5-nano": {
          "name": "GPT 5 Nano"
        },
        "claude-opus-4-5": {
          "name": "Claude Opus 4.5"
        },
        "claude-opus-4-1": {
          "name": "Claude Opus 4.1"
        },
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5"
        },
        "claude-sonnet-4": {
          "name": "Claude Sonnet 4"
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5"
        },
        "claude-3-5-haiku": {
          "name": "Claude 3.5 Haiku"
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro"
        },
        "gemini-3-flash": {
          "name": "Gemini 3 Flash"
        },
        "qwen3-coder": {
          "name": "Qwen3 Coder"
        },
        "kimi-k2": {
          "name": "Kimi k2"
        },
        "kimi-k2-thinking": {
          "name": "Kimi k2 Thinking"
        },
        "glm-4.6": {
          "name": "GLM 4.6"
        },
        "glm-4.7": {
          "name": "GLM 4.7"
        },
        "grok-code": {
          "name": "Grok Code"
        },
        "minimax-m2.1-free": {
          "name": "Minimax M2.1"
        },
        "big-pickle": {
          "name": "Big Pickle"
        }
      }
    },
    "google": {
      "models": {
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5": {
          "name": "Claude Opus 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 2000000,
            "output": 65536
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        }
      }
    }
  },
  "mcp": {
    "spark": {
      "type": "remote",
      "url": "https://spark.memco.ai/mcp",
      "enabled": true
    },
    "surfpol": {
      "type": "local",
      "command": ["surfpool", "mcp"],
      "enabled": true
    },
    // Ability to search through github for code examples!
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
